#!/usr/bin/env python


def get_args():
    import argparse
    parser = argparse.ArgumentParser()
    parser.add_argument(
        '--patches',
        help='pizza cutter patches file',
        required=True,
    )
    parser.add_argument(
        '--output',
        help='output file name',
        required=True,
    )

    parser.add_argument(
        '--nrand',
        type=int,
        default=200_000,
        help='size of random subset to plot',
    )
    parser.add_argument(
        '--seed',
        type=int,
        default=633,
        help='seed for rng',
    )
    parser.add_argument(
        '--colormap',
        default='Spectral',
        help='colormap for plot',
    )

    return parser.parse_args()


def read_catalog(fname):
    import fitsio
    print('reading:', fname)
    return fitsio.read(fname)


def get_colors(rng, npatch, cmap):
    import numpy as np

    colors = cmap(np.linspace(0, 1, npatch))
    rng.shuffle(colors)
    return colors


def get_cmap(colormap):
    import matplotlib.cm as cm
    return getattr(cm, colormap)


def doplot(args, data):
    import matplotlib.pyplot as mplt
    import numpy as np
    import skyproj

    cmap = get_cmap(args.colormap)

    print('making plot')
    rng = np.random.RandomState(seed=args.seed)
    rind = rng.randint(0, data.size, size=args.nrand)

    npatch = np.unique(data['patch_num']).size
    colors = get_colors(rng=rng, npatch=npatch, cmap=cmap)
    fig, ax = mplt.subplots()

    sp = skyproj.DESSkyproj(ax=ax)
    sp.scatter(
        data['ra'][rind],
        data['dec'][rind],
        color=colors[data['patch_num'][rind]],
        s=0.1,
    )
    print('writing:', args.output)
    mplt.savefig(args.output, dpi=150)


def main():
    args = get_args()

    data = read_catalog(args.patches)
    doplot(args, data)


if __name__ == '__main__':
    main()
